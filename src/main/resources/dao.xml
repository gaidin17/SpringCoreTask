<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="userDao" class="dao.impl.UserDaoImpl">
        <constructor-arg>
            <list>
                <ref bean="user1"/>
                <ref bean="user2"/>
                <ref bean="user3"/>
                <ref bean="user4"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="eventDao" class="dao.impl.EventDaoImpl">
        <constructor-arg>
            <list>
                <ref bean="event1"/>
                <ref bean="event2"/>
                <ref bean="event3"/>
                <ref bean="event4"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="auditoriumDao" class="dao.impl.AuditoriumDaoImpl">
        <constructor-arg>
            <list>
                <ref bean="auditorium1"/>
                <ref bean="auditorium2"/>
                <ref bean="auditorium3"/>
                <ref bean="auditorium4"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="userDaoDb" class="dao.impl.dbimpl.UserDaoDbImpl">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="eventDaoDb" class="dao.impl.dbimpl.EventDaoDbImpl">
        <property name="auditoriumDAO" ref="auditoriumDaoDb"/>
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="auditoriumDaoDb" class="dao.impl.dbimpl.AuditoriumDaoDbImpl">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="auditoriumDaoHibernate" class="dao.impl.hibernateimpl.AuditoriumDaoHibernateImpl"/>

    <bean id="eventDaoHibernate" class="dao.impl.hibernateimpl.EventDaoHibernateImpl"/>

    <bean id="userDaoHibernate" class="dao.impl.hibernateimpl.UserDaoHibernateImpl"/>

</beans>